<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        アウトプット一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
     <div class="columns is-multiline">
        <% @posts.each do |post| %>
           <div class="column is-4">
             <div class="card">
              <div class="card-text">
                <%= link_to post_path(post)do %>
                  <p class="title is-4"><%= post.title %>
                <% end %>
              </div>
            </div>

            <div class="card-content">
              <div class="media">
                   <div class="card-body">
                     <%= truncate(post.body, length: 40) %>
                   </div>                     
                </div>
              </div>

              <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-48x48">
                       <%= link_to user_path(post.user.id) do %>
                         <%= attachment_image_tag post.user, :profile_image, falback: "no-image.png" %>
                       <% end %>
                      </figure>
                    </div>

                    <div class="media-content">
                      <div class="title"><%= link_to post.user.username, user_path(post.user.id) %></div>
                    </div>
               </div>

                <div class="content">
                  <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
   </div> 
</select>