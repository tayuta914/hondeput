<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規アウトプット作成
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @post do |f|%>
          <%= render 'layouts/error_messages', model: f.object %>
            <div class="field">
              <%= f.label :title, "本のタイトル", class: "label" %>
              <%= f.text_field :title, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :body, "アクションプラン",class: "label" %>
              <%= f.text_area :body, class: "textarea" %>
            </div>

            <div class="field">
              <%= f.label :impression, "感想", class: "label" %>
              <%= f.text_area :impression, class: "textarea" %>
            </div>

            <%= f.submit "投稿", class: "button is-success" %>
         <% end %>
      </div>
    </div>
  </div>
</section>